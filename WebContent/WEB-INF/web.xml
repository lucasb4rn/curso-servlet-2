<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>gerenciador</display-name>
	<welcome-file-list>
		<welcome-file>bem-vindo.html</welcome-file>
	</welcome-file-list>



	<filter>
		<filter-name>MonitoramentoFilter</filter-name>
		<filter-class>br.com.lucas.gerenciador.servlet.MonitoramentoFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>MonitoramentoFilter</filter-name>
		<url-pattern>/entrada</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>AutorizacaoFilter</filter-name>
		<filter-class>br.com.lucas.gerenciador.servlet.AutorizacaoFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AutorizacaoFilter</filter-name>
		<url-pattern>/entrada</url-pattern>
	</filter-mapping>


	<filter>
		<filter-name>ControladorFilter</filter-name>
		<filter-class>br.com.lucas.gerenciador.servlet.ControladorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ControladorFilter</filter-name>
		<url-pattern>/entrada</url-pattern>
	</filter-mapping>










</web-app>